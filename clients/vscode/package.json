{
  "name": "novaedit",
  "displayName": "NovaEdit",
  "description": "Context-aware code edit actions powered by NovaEdit",
  "version": "0.1.0",
  "publisher": "novaedit",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:novaedit.fixCode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "novaedit.fixCode",
        "title": "NovaEdit: Fix/Improve Code"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.3"
  }
}
