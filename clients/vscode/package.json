{
  "name": "novaedit",
  "displayName": "NovaEdit",
  "description": "Context-aware code edit actions powered by NovaEdit",
  "version": "0.1.0",
  "publisher": "novaedit",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:novaedit.fixCode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "novaedit.fixCode",
        "title": "NovaEdit: Fix/Improve Code"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "NovaEdit",
      "properties": {
        "novaedit.endpoint": {
          "type": "string",
          "default": "http://localhost:8000/v1/edit",
          "description": "NovaEdit server endpoint."
        },
        "novaedit.instruction": {
          "type": "string",
          "default": "fix errors only",
          "description": "Instruction passed to the NovaEdit model."
        },
        "novaedit.timeoutMs": {
          "type": "number",
          "default": 15000,
          "description": "Request timeout in milliseconds."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.3"
  }
}
